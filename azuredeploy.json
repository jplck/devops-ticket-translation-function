{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "PAT": {
            "type": "securestring",
            "metadata": {
                "description": "Azure DevOps Personal Access Token"
            }
        },
        "targetLanguage": {
            "type": "string",
            "defaultValue": "en",
            "allowedValues": [ "en", "cn", "fr", "es", "de", "it", "ru", "af", "ar", "bn", "bs", "bg", "yue", "ca", "zh-Hans", "zh-Hant", "hr", "cs", "da", "nl", "et", "fj", "fil", "fi", "el", "gu", "ht", "he", "hi", "mww", "hu", "is", "id", "ga", "ja", "kn", "kk", "sw", "tlh-Latn", "tlh-Piqd", "ko", "lv", "lt", "mg", "ms", "ml", "mt", "mi", "mr", "nb", "fa", "pl", "pt-br", "pt-pt", "ba", "otq", "ro", "sm", "sr-Cyrl", "sr-Latn", "sk", "sl", "sv", "ty", "ta", "te", "th", "to", "tr", "uk", "ur", "vi", "cy", "yua" ]
        },
        "translatorLocation": {
            "type": "string",
            "defaultValue": "global",
            "allowedValues": [ "australiaeast", "canadacentral", "centralindia", "eastasia", "global", "westeurope", "westus2" ],
            "metadata": { "description": "Deployment location of your translator. Choose the Global region unless your business or application requires a specific region." }
        },
        "SKU": {
            "type": "string",
            "metadata": {
                "description": "SKU for Text Translation API.\nF0 is the free tier, but only allowed once per subscription. Upon deployment conflicts you'll like want to switch to S1."
            },
            "defaultValue": "F0",
            "allowedValues": [
                "F0",
                "S1",
                "S2",
                "S3",
                "S4"
            ]
        },
        "azureFunctionRuntime": {
            "allowedValues": [ "python", "dotnet" ],
            "defaultValue": "python",
            "metadata": { "description": "The Azure Function runtime you want to use." },
            "type": "string"
        },
        "appNamePrefix": {
            "type": "String",
            "defaultValue": "translate-",
            "minLength": 3,
            "maxLength": 12,
            "metadata": { "description": "Prefix of your translatorfunction. A unique ID will be added to avoid resource name conflicts." }
        }
    },
    "variables": {
        "hostingPlanName": "[concat('hostingplan-', uniqueString(resourceGroup().id))]",
        "storageAccountName": "[ concat('store', uniqueString(resourceGroup().id)) ]",
        "appFunctionName": "[concat(parameters('appNamePrefix'), uniqueString(resourceGroup().id))]",
        "translatorAccountName": "[concat('translator-', resourceGroup().name)]",
        "storageAccountid": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-02-01",
            "name": "[variables('appFunctionName')]",
            "kind": "functionapp,linux",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
                "[resourceId('Microsoft.CognitiveServices/accounts', variables('translatorAccountName'))]"
            ],
            "properties": {
                "numberOfWorkers": -1,
                "netFrameworkVersion": "v4.0",
                "linuxFxVersion": "PYTHON|3.8",
                "name": "[variables('appFunctionName')]",
                "siteConfig": {
                    "pythonVersion": "3.8",
                    "cors": {
                        "allowedOrigins": [
                            "*"
                        ]
                    },
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "[parameters('azureFunctionRuntime')]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2019-06-01').keys[0].value,';EndpointSuffix=core.windows.net')]"
                        },
                        {
                            "name": "TRANSLATION_ENDPOINT",
                            "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts',variables('translatorAccountName'))).endpoint]"
                        },
                        {
                            "name": "ENDPOINT_SECRET",
                            "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', variables('translatorAccountName')), '2017-04-18').key1]"
                        },
                        {
                            "name": "ENDPOINT_REGION",
                            "value": "[parameters('translatorLocation')]"
                        },
                        {
                            "name": "PERSONAL_ACCESS_TOKEN",
                            "value": "[parameters('PAT')]"
                        },
                        {
                            "name": "DESCRIPTION_FIELD",
                            "value": "System.Description"
                        },
                        {
                            "name": "TRANSLATION_FIELD",
                            "value": "Custom.Translateddescription"
                        },
                        {
                            "name": "TARGET_LANGUAGE",
                            "value": "[parameters('targetLanguage')]"
                        },
                        {
                            "name": "API_VERSION",
                            "value": "3.0"
                        }
                    ]
                },
                "clientAffinityEnabled": false
            },
            "resources": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "[variables('translatorAccountName')]",
            "location": "[parameters('translatorLocation')]",
            "kind": "TextTranslation",
            "sku": {
                "name": "[parameters('SKU')]"
            },
            "properties": {}
        }
    ]
}
