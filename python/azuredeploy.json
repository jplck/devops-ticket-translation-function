{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "PAT": {
            "type": "securestring",
            "metadata": {
                "description": "Azure DevOps Personal Access Token"
            }
        },
        "targetLanguage": {
            "type": "string",
            "defaultValue": "en",
            "allowedValues": [ "en", "cn", "fr", "es", "de", "it", "ru", "af", "ar", "bn", "bs", "bg", "yue", "ca", "zh-Hans", "zh-Hant", "hr", "cs", "da", "nl", "et", "fj", "fil", "fi", "el", "gu", "ht", "he", "hi", "mww", "hu", "is", "id", "ga", "ja", "kn", "kk", "sw", "tlh-Latn", "tlh-Piqd", "ko", "lv", "lt", "mg", "ms", "ml", "mt", "mi", "mr", "nb", "fa", "pl", "pt-br", "pt-pt", "ba", "otq", "ro", "sm", "sr-Cyrl", "sr-Latn", "sk", "sl", "sv", "ty", "ta", "te", "th", "to", "tr", "uk", "ur", "vi", "cy", "yua" ]
        },
        "translatorLocation": {
            "type": "string",
            "defaultValue": "global",
            "allowedValues": [ "australiaeast", "canadacentral", "centralindia", "eastasia", "global", "westeurope", "westus2" ],
            "metadata": { "description": "Deployment location of your translator. Choose the Global region unless your business or application requires a specific region." }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "[ concat('store', uniqueString(resourceGroup().id)) ]",
            "minLength": 3,
            "maxLength": 24
        },
        "translatorAccountName": {
            "type": "string",
            "defaultValue": "[concat('translator-', resourceGroup().name)]"
        },
        "appFunctionName": {
            "type": "string",
            "defaultValue": "[concat('translate-', uniqueString(resourceGroup().id))]"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "functions": [],
    "variables": {

        "storageAccountid": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-02-01",
            "name": "[parameters('appFunctionName')]",
            "kind": "functionapp,linux",
            "location": "[parameters('location')]",
            "properties": {
                "numberOfWorkers": -1,
                "netFrameworkVersion": "v4.0",
                "linuxFxVersion": "PYTHON|3.8",
                "name": "[parameters('appFunctionName')]",
                "reserved": true,
                "siteConfig": {
                    "pythonVersion": "3.8",
                    "cors": {
                        "allowedOrigins": [
                            "*"
                        ]
                    },
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "python"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2019-06-01').keys[0].value,';EndpointSuffix=core.windows.net')]"
                        },
                        {
                            "name": "TRANSLATION_ENDPOINT",
                            "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts',parameters('translatorAccountName'))).endpoint]"
                        },
                        {
                            "name": "ENDPOINT_SECRET",
                            "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', parameters('translatorAccountName')), '2017-04-18').key1]"
                        },
                        {
                            "name": "ENDPOINT_REGION",
                            "value": "[parameters('translatorLocation')]"
                        },
                        {
                            "name": "PERSONAL_ACCESS_TOKEN",
                            "value": "[parameters('PAT')]"
                        },
                        {
                            "name": "DESCRIPTION_FIELD",
                            "value": "System.Description"
                        },
                        {
                            "name": "TRANSLATION_FIELD",
                            "value": "Custom.Translateddescription"
                        },
                        {
                            "name": "TARGET_LANGUAGE",
                            "value": "[parameters('targetLanguage')]"
                        },
                        {
                            "name": "API_VERSION",
                            "value": "3.0"
                        }
                    ]
                },
                "clientAffinityEnabled": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
                "[resourceId('Microsoft.CognitiveServices/accounts', parameters('translatorAccountName'))]"
            ],
            "resources": []
        }
    ],
    "outputs": {}
}